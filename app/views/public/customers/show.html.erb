<div class="container">
  <div class="row d-flex justify-content-center">
    <h5 class="border p-3 my-3">マイページ</h5>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="col-md-7 text-center">
      <h5><b>登録情報<%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-success" %></b></h5>

      <table class="table">

        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name + @customer.first_name %></td>
        </tr>

        <tr>
          <th>カナ</th>
          <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
        </tr>

        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>

        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>

        <tr>
          <th>配送先</th>
          <td><%= link_to "一覧を見る", addresses_path, class:"btn btn-primary ml-3" %></td>
        </tr>

        <tr>
          <th>注文履歴</th>
          <td><%= link_to "一覧を見る", orders_path, class:"btn btn-primary ml-3" %></td>
        </tr>

      </table>
    </div>
  </div>
</div>
