<div class="container">
  <div class="row d-flex justify-content-center">
    <h5 class="border p-3 my-3">配送先登録/一覧</h5>
  </div>

<% if @new_address.errors.any? %>
  <%= @new_address.errors.count %>件のエラーが発生しました
  <ul>
    <% @new_address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @new_address do |f| %>
    <div class="row mx-auto">
      <table class="table">
        <tr>
          <td><%= f.label :"郵便番号" %></td>
          <td><%= f.text_field :postal_code %></td>
        </tr>

        <tr>
          <td><%= f.label :"住所" %></td>
          <td><%= f.text_field :address %></td>
        </tr>

        <tr>
          <td><%= f.label :"宛名" %></td>
          <td><%= f.text_field :name %></td>
        </tr>

        <tr>
          <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>

      </table>
    </div>
  <% end %>

  <div class="row mx-auto">
    <table class="table">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
        </tr>
      </thead>

      <% @address.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
        </tr>

        <tr>
          <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %></td>
          <td><%= link_to "削除する", address_path(address.id), class: "btn btn-success", method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
          <td></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>