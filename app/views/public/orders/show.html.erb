<div class="container p-3">
  <div class="row d-flex justify-content-center">
    <h5 class="border p-3 my-3">
        注文履歴詳細
    </h5>
  </div>
  <div class="row">
    <div class="col-md-8">
      <h5><b>注文情報</b></h5>
      <table class="table table-bordered border-info">

        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>

        <tr>
          <th>配送先</th>
          <td>〒<%= @order.postal_code + " " + @order.address + " " + @order.name %></td>
        </tr>

        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>

        <tr>
          <th>ステータス</th>
          <td><%#= @is_order_status_i18n %></td>
        </tr>

      </table>
    </div>

    <div class="col-4">
      <h5><b>請求情報</b></h5>
      <table class="table table-bordered border-info">

        <tr>
          <th><b>商品合計</b></th>
          <td><%= @order.total_price - @order.postage %>円</td>
        </tr>

        <tr>
          <th>配送料</th>
          <td><%= @order.postage %>円</td>
        </tr>

        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_price %>円</td>
        </tr>

      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <h5><b>注文内容</b></h5>
      <table class="table">

        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>

        <% @order_details.each do |order_detail| %>
          <tr>
            <!--商品名-->
            <td><%= order_detail.item.name %></td>
            <!--単価-->
            <td><%= order_detail.item.with_tax_price %>円</td>
            <!--個数-->
            <td><%= order_detail.amount %></td>
            <!--小計-->
            <td><%= order_detail.amount * order_detail.item.with_tax_price %>円</td>
          </tr>
        <% end %>
      </table>
      <%= @order_details.inspect %>
    </div>
  </div>
</div>