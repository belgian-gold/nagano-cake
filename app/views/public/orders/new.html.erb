<div class="container">
  <div class="row d-flex justify-content-center">
      <h3 class="border p-3 my-3">
        注文情報入力
      </h3>
  </div>
  
  <%= form_with model: Order.new, url: orders_confirm_path, method: :post do |f| %>
  <span>支払い方法</span>
