<div class="container">
  <div class="row d-flex justify-content-center">
    <h5 class="border p-3 my-3">会員一覧</h5>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>会員ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>

        <tr>
          <td><%= customer.id %></td>

          <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>

          <td><%= customer.email %></td>

          <td>
            <% if customer.is_membership_status %>
              <a>有効</a>
            <% else %>
              <a>退会</a>
            <% end %>
          </td>
        </tr>

        <% end %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-center">
  <%= paginate @customers %>
  </div>
</div>
