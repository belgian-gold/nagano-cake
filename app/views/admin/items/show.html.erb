<div class="container">
  <div class="row d-flex justify-content-center">
      <h3 class="border p-3 my-3">
        商品詳細
      </h3>
  </div>

   <div class="row">
    <div class="col-lg-7">
      <%= image_tag @item.get_item_image, size: "600x400" %>
    </div>

    <div class="col-lg-5">
     <table class = "table table-borderless">
      <tr>
       <td>商品名</td>
       <td><%= @item.name %></td>
      </tr>

      <tr>
       <td>商品説明</td>
       <td><%= @item.name_explanation %></td>
      </tr>

      <tr>
       <td>ジャンル</td>
       <td><%= @genre.name %></td>
      </tr>

      <tr>
       <td>税込価格</br>
           (税抜価格)</td>
       <td><%= @item.with_tax_price %>円</br>
           (<%= @item.price %>円)</td>
      </tr>

      <tr>
       <td>販売ステータス</td>
       <td><% if @item.is_sales_status %>
           <p class = "text-success"><strong>販売中</strong></p>
          <% else %>
           <p class = "text-secondary"><strong>販売停止中</strong></p>
          <% end %>
       </td>
      </tr>
     </table>
    </div>
   </div>
    
    <br>
    <div class = "text-center">
     <%= link_to "編集する", edit_admin_item_path, class:"btn btn-success ml-3" %>
    </div>
</div>