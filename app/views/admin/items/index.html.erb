<h1>商品一覧</h1>

<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |i| %>
      <tr>
        <td><%= i.id %></td>
        <td><%= link_to i.name, admin_item_path(i.id) %></td>
        <td><%= i.price %></td>
        <td><%= i.genre.name %></td>
        <td>
          <% if i.is_sales_status %>
          <strong>販売中</strong>
          <% else %>
          <strong>販売停止中</strong>
          <% end %>
        </td>
      </tr>
    <% end %>
  <tbody>
<table>