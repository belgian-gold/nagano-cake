<h1>商品編集</h1>

<%#= render "layouts/errors", obj: @item %>

  <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <td>商品画像</td>
          <td><%= f.file_field :item_image, accept: "image/*", class: "rounded" %></td>
        </tr>

        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name, style: "width:50%", placeholder: "商品名", class: "rounded" %></td>
        </tr>

        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :name_explanation, style: "width:50%", rows: "5", placeholder: "ここに説明文を記述します", class: "rounded" %></td>
        </tr>



        <tr>
          <td>ジャンル</td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい", class: "rounded" %></td>
        </tr>

        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price, style: "width:50%",placeholder: "1000", class: "rounded" %>円</td>
        </tr>


      <tr>
        <td>販売ステータス</td>
        <td>
          <%= f.radio_button :is_sales_status, :true %>
          <%= f.label :is_sales_status, "販売中", { value: :tr }  %>

          <%= f.radio_button :is_sales_status, :false %>
          <%= f.label :is_sales_status, "販売停止中", { value: :false } %>
        </td>
      </tr>
    </table>
    <div class="row d-flex justify-content-center">
      <tr>
        <td><%= f.submit "変更を保存する", class:"btn btn-success" %></td>
      </tr>
    </div>
    <% end %>
    </div>
  </div>